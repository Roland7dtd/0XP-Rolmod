<configs>
<!-- <This changes all quests in the game to give a skillpoint instead of experience /> -->
	<set xpath="/quests/quest/reward[@type='Exp']/@type">SkillPoints</set>
	<set xpath="/quests/quest/reward[@type='SkillPoints']/@value">1</set>
	
<!-- <These specifically change the higher tier quests to give 2 skillpoints for Tier 3 and 4 and 3 skillpoints for Tier 5 /> -->	
	
	<set xpath="/quests/quest[@id='tier3_clear']/reward[@type='SkillPoints']/@value">2</set>
	<set xpath="/quests/quest[@id='tier3_fetch']/reward[@type='SkillPoints']/@value">2</set>
	<set xpath="/quests/quest[@id='tier3_hidden_cache']/reward[@type='SkillPoints']/@value">2</set>
	<set xpath="/quests/quest[@id='tier3_fetch_clear']/reward[@type='SkillPoints']/@value">2</set>
	<set xpath="/quests/quest[@id='tier3_hidden_clear']/reward[@type='SkillPoints']/@value">2</set>
	
	<set xpath="/quests/quest[@id='tier4_clear']/reward[@type='SkillPoints']/@value">2</set>
	<set xpath="/quests/quest[@id='tier4_fetch']/reward[@type='SkillPoints']/@value">2</set>
	<set xpath="/quests/quest[@id='tier4_hidden_cache']/reward[@type='SkillPoints']/@value">2</set>
	<set xpath="/quests/quest[@id='tier4_fetch_clear']/reward[@type='SkillPoints']/@value">2</set>
	<set xpath="/quests/quest[@id='tier4_hidden_clear']/reward[@type='SkillPoints']/@value">2</set>
	
	<set xpath="/quests/quest[@id='tier5_clear']/reward[@type='SkillPoints']/@value">3</set>
	<set xpath="/quests/quest[@id='tier5_fetch']/reward[@type='SkillPoints']/@value">3</set>
	<set xpath="/quests/quest[@id='tier5_hidden_cache']/reward[@type='SkillPoints']/@value">3</set>
	<set xpath="/quests/quest[@id='tier5_fetch_clear']/reward[@type='SkillPoints']/@value">3</set>
	<set xpath="/quests/quest[@id='tier5_hidden_clear']/reward[@type='SkillPoints']/@value">3</set>	
	
<!-- <This deletes the original starter quests 2-8 /> -->	
	<remove xpath="/quests/quest[@id='quest_BasicSurvival1']"/>
	<remove xpath="/quests/quest[@id='quest_BasicSurvival3']"/>
	<remove xpath="/quests/quest[@id='quest_BasicSurvival4']"/>
	<remove xpath="/quests/quest[@id='quest_BasicSurvival5']"/>
	<remove xpath="/quests/quest[@id='quest_BasicSurvival6']"/>
	<remove xpath="/quests/quest[@id='quest_BasicSurvival7']"/>
	<remove xpath="/quests/quest[@id='quest_BasicSurvival8']"/>
	
<!-- <This changes the remaining quest 2 to become the new quest 1   /> -->	
	<set xpath="/quests/quest[@id='quest_BasicSurvival2']/@id">quest_BasicSurvival1</set>
	
	

<!-- <This alters quest one so that all basic survival tasks can be done in any order. /> -->	
	<remove xpath="/quests/quest[@id='quest_BasicSurvival1']/objective[@type='FetchKeep']"/>
	<remove xpath="/quests/quest[@id='quest_BasicSurvival1']/objective[@type='FetchKeep']"/>
	<remove xpath="/quests/quest[@id='quest_BasicSurvival1']/objective[@type='FetchKeep']"/>
	<remove xpath="/quests/quest[@id='quest_BasicSurvival1']/objective[@type='Craft']"/>
	<remove xpath="/quests/quest[@id='quest_BasicSurvival1']/reward[@type='Quest']"/>
	
	<insertBefore xpath="/quests/quest[@id='quest_BasicSurvival1']/reward[@type='SkillPoints']">
		
		<objective type="Craft" id="meleeToolStoneAxe" value="1" phase="1" />
		<objective type="Craft" id="plantFiberPants" value="1" phase="1" />
		<objective type="Craft" id="plantFiberShirt" value="1" phase="1" />
		<objective type="Craft" id="meleeClubWood" value="1" phase="1" />
		<objective type="Craft" id="gunWoodenBow" value="1" phase="1" />
		<objective type="Craft" id="ammoArrowStone" value="6" phase="1" />
		
		
	</insertBefore>
	
	<append xpath="/quests/quest[@id='quest_BasicSurvival1']">
		<reward type="Quest" id="quest_whiteRiverCitizen1">
			<property name="chainquest" value="false" />
		</reward>
		<reward type="SkillPoints" value="4" chainreward="true" />
	</append>
	
</configs>
